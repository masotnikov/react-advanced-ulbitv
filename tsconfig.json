{
  "compilerOptions": {
    "outDir": "./dist/",
    //подсвечивает все места где не указан тип
    "noImplicitAny": true,
    "module": "ESNext",
    // в какую спецификацию компилируем: для большинства браузеров
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}